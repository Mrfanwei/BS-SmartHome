<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bilibili.magicasakura.widgets.TintToolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color_primary"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0.0dp"
        app:layout_scrollFlags="enterAlways|scroll"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <TextView
                android:id="@+id/tv_selection_bar"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_category_bar"
                android:gravity="center"
                android:textColor="@drawable/actionbar_valuestytle"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="精选"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_category_bar"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_music_bar"
                android:gravity="center"
                android:textColor="@drawable/actionbar_valuestytle"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="分类"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_music_bar"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@drawable/actionbar_valuestytle"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="音乐"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_novel_bar"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_music_bar"
                android:gravity="center"
                android:textColor="@drawable/actionbar_valuestytle"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="小说"
                android:clickable="true"/>


            <ImageView
                android:id="@+id/iv_search_bar"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/actionbar_search" />
        </RelativeLayout>
    </com.bilibili.magicasakura.widgets.TintToolbar>

    <com.smartlife.qintin.widget.CustomViewPager
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/nav_play"
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>
